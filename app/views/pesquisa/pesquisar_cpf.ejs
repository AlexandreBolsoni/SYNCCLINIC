<!DOCTYPE HTML>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>Sync Clinic</title>
  <!-- JQuery -->
  <script src="js/jquery-2.2.1.js"></script>
  <!-- bootstrap - link cdn -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <!-- incluindo css -->
  <link href="/css/style.css" rel="stylesheet">
  <!-- favicon -->
  <link rel="shortcut icon" href="/images/favicon.ico" />
</head>

<body>
  <%-include('../partes/header')%>
  

  <main class="container">
      <h2>Pesquisar Consultas</h2>
      <form method="POST" action="/pesquisa_cpf">
          <div class="form-group">
              <label for="cpf">Digite seu CPF:</label>
              <input type="text" class="form-control" id="cpf" name="CPF" placeholder="Ex: 123.456.789-00" required>
          </div>
          <button type="submit" class="btn btn-primary">Pesquisar</button>
      </form>
  
      <% if (consulta && consulta.length > 0) { %>
          <h3>Consultas Agendadas</h3>
          <ul class="list-group" style="text-align: center;">
              <% consulta.forEach(function(item) { %>
                <%console.log(item)%>
                  <li class="list-group-item">
                    <img src="/uploads/<%=item.foto%>" alt="Foto do Paciente" width="100"><br>
                      <strong>Nome:</strong> <%= item.nome %> <%= item.sobrenome %> <br>
                      <strong>Telefone:</strong> <%= item.telefone %> <br>
                      <strong>Motivo:</strong> <%= item.motivo_consulta %> <br>
                      <strong>Data:</strong> <%= new Intl.DateTimeFormat('pt-BR', { 
                        weekday: 'long', 
                        day: '2-digit', 
                        month: '2-digit', 
                        year: 'numeric' 
                    }).format(new Date(item.data_consulta)) %> <br>
                    
                      <strong>Hora:</strong> <%= item.hora_consulta %>
                    
                  </li>
              <% }) %>
          </ul>
      <% } else if (erro) { %>
          <p class="text-danger"><%= erro %></p>
      <% } %>
  </main>
</body>

</html>