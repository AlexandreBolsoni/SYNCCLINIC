<!DOCTYPE HTML>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>Sync Clinic</title>
  <!-- JQuery -->
  <script src="js/jquery-2.2.1.js"></script>
  <!-- bootstrap - link cdn -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <!-- incluindo css -->
  <link href="/css/style.css" rel="stylesheet">
  <!-- favicon -->
  <link rel="shortcut icon" href="/images/favicon.ico" />
</head>

<body>
    <%- include('../partes/header') %>
    <main class="container">
      <h2 class="text-center">Login</h2>

      <% if (validacoes.length > 0) { %>
        <div class="alert alert-danger">
          <strong>Atenção!</strong>
          <ul>
            <% for (var i = 0; i < validacoes.length; i++) { %>
              <li><%= validacoes[i].msg %></li>
            <% } %>
          </ul>
        </div>
      <% } %>

      <div class="card_login" style="text-align: center;">
        <div class="login">
          <form action="/login_autenticar" method="post">
            <div class="form-group">
              <label for="admin" class="">Administrador:</label>
              <input type="text" class="form-control input-sm" id="admin" name="admin" placeholder="Admin" required>
            </div>

            <div class="form-group">
              <label for="senha" class="">Senha:</label>
              <input type="password" class="form-control input-sm" id="senha" name="senha" placeholder="Senha" required>
            </div>

            <div class="button-spacing">
              <button type="submit" class="btn btn-primary button-spacing" style="text-align: center;">Entrar</button>
            </div>
          </form>
        </div>
      </div>
    </main>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
</body>

</html>
