<!DOCTYPE HTML>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>Sync Clinic</title>
  <!-- JQuery -->
  <script src="js/jquery-2.2.1.js"></script>
  <!-- bootstrap - link cdn -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <!-- incluindo css -->
  <link href="/css/style.css" rel="stylesheet">
  <!-- favicon -->
  <link rel="shortcut icon" href="/images/favicon.ico" />
</head>

<body>
    <%-include('../partes/header')%>
    <main class="container">
      <h2>Login</h2>
        <%if(validacoes.length>0){%>
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-danger">
                        <strong>Atenção!</strong>
                        <ul>
                            <%for(var i=0;i<validacoes.length;i++){%>
                                <li style="list-style: inside;"><%=validacoes[i].msg%></li>
                            <%}%>
                        </ul>
                    </div>
                </div>
            </div>
        <%}%>

        <div class="row">
            <div class="col-md-12">
                <form action="/login_autenticar" method="post">
                  <div class="form-group form-inline">
                    <label for="admin" class="label-spacing">Administrador:</label>
                    <input type="text" class="form-control input-sm" id="admin" name="admin" placeholder="Admin">
                  </div>
                  <div class="form-group form-inline">
                    <label for="senha" class="label-spacing">Senha:</label>
                    <input type="password" class="form-control input-sm" id="senha" name="senha" placeholder="Senha">
                  </div>
                  <div class="button-spacing">
                    <button type="submit" class="btn" style="background-color: #007bff; color: white;">Entrar</button>
                  </div>
                </form>
            </div>
        </div>
    </main>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous">
    </script>
</body>

</html>